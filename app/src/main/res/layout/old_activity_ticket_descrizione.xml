<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/scrollView2"
        android:background="@color/backgroundSegnalazione"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"
        android:layout_weight="7"
        tools:context="com.gambino_serra.condomanager_fornitore.Old_View.Amministratore.NuovoTicket.TicketDescrizione">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:layout_weight="15">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="25dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="Descrivi brevemente il problema riscontrato "/>


            <android.support.v7.widget.CardView
                android:id="@+id/card_segnalazione"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="@color/color_white"
                card_view:cardCornerRadius="3dp"
                card_view:cardElevation="3dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/imageSegnalazione"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_width="25dp"
                            android:layout_height="match_parent"
                            app:srcCompat="@mipmap/ic_segnalazione" />

                        <TextView
                            android:text="Segnalazione"
                            android:layout_marginTop="10dip"
                            android:layout_marginLeft="2dip"
                            android:fontFamily="sans-serif"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="20"></TextView>

                    </LinearLayout>

                    <EditText
                        android:text=""
                        android:layout_marginTop="10dip"
                        android:layout_marginLeft="30dip"
                        android:layout_marginBottom="10dip"
                        android:fontFamily="sans-serif"
                        android:textSize="18sp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:id="@+id/segnalazioneD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </EditText>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/primarySegnalazione"
        android:orientation="horizontal"
        android:divider="@drawable/vertical_divider"
        android:dividerPadding="12dip"
        android:showDividers="middle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/btnIndietro"
            android:clickable="true">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:layout_marginBottom="10dip"
                android:textSize="@dimen/font_size_small"
                android:textColor="@color/color_white"
                android:fontFamily="sans-serif-condensed"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="INDIETRO"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/btnInvia"
            android:clickable="true">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="15dip"
                android:fontFamily="sans-serif-condensed"
                android:text="INVIA"
                android:textAlignment="center"
                android:textColor="@color/color_white"
                android:textSize="@dimen/font_size_small"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="15dip"
                android:backgroundTint="@color/colorPrimary"
                android:src="@drawable/ic_forward"
                android:tint="@color/color_white" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>