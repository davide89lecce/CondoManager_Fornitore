<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:orientation="horizontal"
        android:background="@color/color_white"
        android:elevation="10dp"
        android:weightSum="1">

        <ImageView
            android:id="@+id/imageStatoD"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:layout_width="30dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/descrizioneStatoD"
            android:text=""
            android:layout_marginTop="10dip"
            android:layout_marginLeft="20dip"
            android:layout_marginBottom="10dip"
            android:fontFamily="sans-serif"
            android:textStyle="italic"
            android:textSize="16sp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/scrollView2"
        android:background="@color/grey_300"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"
        android:layout_weight="7"
        tools:context="com.gambino_serra.condomanager_fornitore.Old_View.Condomino.SegnalazioneRisolta.DetailsSegnalazioneRisolta">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/grey_300"
            android:weightSum="1">

            <!-- Prima card  -->

            <android.support.v7.widget.CardView
                android:id="@+id/card_dati_segnalazione"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="@color/color_white"
                card_view:cardCornerRadius="5dp"
                card_view:cardElevation="5dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical"
                    android:background="@color/color_white"
                    android:weightSum="1">

                    <TextView
                        android:text="Segnalazione"
                        android:layout_marginTop="10dip"
                        android:layout_marginLeft="10dip"
                        android:layout_marginBottom="10dip"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></TextView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_data"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:cardBackgroundColor="@color/color_white"
                        card_view:cardCornerRadius="1dp"
                        card_view:cardElevation="1dp"
                        card_view:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:weightSum="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <ImageView
                                    android:id="@+id/imageData"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_width="25dp"
                                    android:layout_height="match_parent"
                                    />

                                <TextView
                                    android:text="Data segnalazione"
                                    android:layout_marginTop="10dip"
                                    android:layout_marginLeft="2dip"
                                    android:fontFamily="sans-serif"
                                    android:textStyle="bold"
                                    android:textSize="16sp"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="20"></TextView>

                            </LinearLayout>

                            <TextView
                                android:text=""
                                android:layout_marginTop="10dip"
                                android:layout_marginLeft="30dip"
                                android:layout_marginBottom="10dip"
                                android:fontFamily="sans-serif"
                                android:textSize="18sp"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:id="@+id/dataD"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"></TextView>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_condominio"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:cardBackgroundColor="@color/color_white"
                        card_view:cardCornerRadius="1dp"
                        card_view:cardElevation="1dp"
                        card_view:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:weightSum="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <ImageView
                                    android:id="@+id/imageCondominio"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_width="25dp"
                                    android:layout_height="match_parent"
                                    />

                                <TextView
                                    android:text="Condominio"
                                    android:layout_marginTop="10dip"
                                    android:layout_marginLeft="2dip"
                                    android:fontFamily="sans-serif"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="20"></TextView>

                            </LinearLayout>

                            <TextView
                                android:text=""
                                android:layout_marginTop="10dip"
                                android:layout_marginLeft="30dip"
                                android:layout_marginBottom="10dip"
                                android:fontFamily="sans-serif"
                                android:textSize="18sp"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:id="@+id/condominioD"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"></TextView>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        android:id="@+id/card_condomino"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:cardBackgroundColor="@color/color_white"
                        card_view:cardCornerRadius="1dp"
                        card_view:cardElevation="1dp"
                        card_view:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:weightSum="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <ImageView
                                    android:id="@+id/imageCondomino"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_width="25dp"
                                    android:layout_height="match_parent"
                                    />

                                <TextView
                                    android:text="Condomino"
                                    android:layout_marginTop="10dip"
                                    android:layout_marginLeft="2dip"
                                    android:fontFamily="sans-serif"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="20"></TextView>

                            </LinearLayout>

                            <TextView
                                android:text=""
                                android:layout_marginTop="10dip"
                                android:layout_marginLeft="30dip"
                                android:layout_marginBottom="10dip"
                                android:fontFamily="sans-serif"
                                android:textSize="18sp"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:id="@+id/condominoD"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"></TextView>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_segnalazione"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:cardBackgroundColor="@color/color_white"
                        card_view:cardCornerRadius="1dp"
                        card_view:cardElevation="1dp"
                        card_view:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:weightSum="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <ImageView
                                    android:id="@+id/imageSegnalazione"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_width="25dp"
                                    android:layout_height="match_parent"
                                    />

                                <TextView
                                    android:text="Segnalazione"
                                    android:layout_marginTop="10dip"
                                    android:layout_marginLeft="2dip"
                                    android:fontFamily="sans-serif"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="20"></TextView>

                            </LinearLayout>

                            <TextView
                                android:text=""
                                android:layout_marginTop="10dip"
                                android:layout_marginLeft="30dip"
                                android:layout_marginBottom="10dip"
                                android:fontFamily="sans-serif"
                                android:textSize="18sp"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:id="@+id/segnalazioneD"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"></TextView>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

            </android.support.v7.widget.CardView>
            <!-- Fine prima card  -->


            <!-- Seconda card -->
            <android.support.v7.widget.CardView
                android:id="@+id/card_dati_intervento"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="@color/color_white"
                card_view:cardCornerRadius="5dp"
                card_view:cardElevation="5dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical"
                    android:background="@color/color_white"
                    android:weightSum="1">

                    <TextView
                        android:text="Rapporto intervento"
                        android:layout_marginTop="10dip"
                        android:layout_marginLeft="10dip"
                        android:layout_marginBottom="10dip"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></TextView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_data_intervento"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:cardBackgroundColor="@color/color_white"
                        card_view:cardCornerRadius="1dp"
                        card_view:cardElevation="1dp"
                        card_view:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:weightSum="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <ImageView
                                    android:id="@+id/imageDataIntervento"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_width="25dp"
                                    android:layout_height="match_parent"
                                    />

                                <TextView
                                    android:text="Data intervento"
                                    android:layout_marginTop="10dip"
                                    android:layout_marginLeft="2dip"
                                    android:fontFamily="sans-serif"
                                    android:textStyle="bold"
                                    android:textSize="16sp"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="20"></TextView>

                            </LinearLayout>

                            <TextView
                                android:text=""
                                android:layout_marginTop="10dip"
                                android:layout_marginLeft="30dip"
                                android:layout_marginBottom="10dip"
                                android:fontFamily="sans-serif"
                                android:textSize="18sp"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:id="@+id/dataInterventoD"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"></TextView>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_descrizione_intervento"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:cardBackgroundColor="@color/color_white"
                        card_view:cardCornerRadius="1dp"
                        card_view:cardElevation="1dp"
                        card_view:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:weightSum="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <ImageView
                                    android:id="@+id/imageDescrizioneIntervento"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_width="25dp"
                                    android:layout_height="match_parent"
                                    />

                                <TextView
                                    android:text="Descrizione"
                                    android:layout_marginTop="10dip"
                                    android:layout_marginLeft="2dip"
                                    android:fontFamily="sans-serif"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="20"></TextView>

                            </LinearLayout>

                            <TextView
                                android:text=""
                                android:layout_marginTop="10dip"
                                android:layout_marginLeft="30dip"
                                android:layout_marginBottom="10dip"
                                android:fontFamily="sans-serif"
                                android:textSize="18sp"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:id="@+id/interventoD"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"></TextView>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>


                </LinearLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/primarySegnalazione"
        android:orientation="horizontal"
        android:id="@+id/btnChiama"
        android:clickable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="15dip"
                android:backgroundTint="@color/colorPrimary"
                android:src="@drawable/telefono"
                android:tint="@color/color_white" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:layout_marginBottom="10dip"
                android:textSize="@dimen/font_size_small"
                android:textColor="@color/color_white"
                android:fontFamily="sans-serif-condensed"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="CHIAMA"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>