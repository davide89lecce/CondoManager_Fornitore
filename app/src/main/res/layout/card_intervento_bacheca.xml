<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:tag="cards main container">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        card_view:cardBackgroundColor="@color/color_white"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="3dp"
        card_view:cardUseCompatPadding="true"
        card_view:layout_constraintLeft_toLeftOf="parent"
        card_view:layout_constraintRight_toRightOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">


        <android.support.constraint.ConstraintLayout
            android:id="@+id/list_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/D_PrioritÃ "
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="0dp"
                android:background="@android:color/holo_blue_bright"
                app:srcCompat="@drawable/cross"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintLeft_toLeftOf="parent"
                card_view:layout_constraintRight_toRightOf="@+id/Logo_Interv"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/D_Condominio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:maxLines="3"
                android:text="Condominio Nome"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="14sp"
                card_view:layout_constraintLeft_toRightOf="@+id/Logo_Interv"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/D_Indirizzo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:fontFamily="sans-serif"
                android:text="Indirizzo"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="12sp"
                card_view:layout_constraintLeft_toLeftOf="@+id/D_Condominio"
                card_view:layout_constraintTop_toBottomOf="@+id/D_Condominio" />

            <TextView
                android:id="@+id/D_OggettoInterv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="8dp"
                android:text="Oggetto Intervento"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintLeft_toLeftOf="@+id/D_Indirizzo"
                card_view:layout_constraintTop_toBottomOf="@+id/D_Indirizzo"
                card_view:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/DataAgg_Interv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:text="QUI CI VA IL MENU'"
                android:textSize="12sp"
                card_view:layout_constraintRight_toRightOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/IDTicket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:visibility="invisible"
                card_view:layout_constraintRight_toLeftOf="@+id/DataAgg_Interv"
                card_view:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/Logo_Interv"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/sands_of_time"
                android:tag="image_tag"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintLeft_toLeftOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:srcCompat="@drawable/bg_circle" />

            <TextView
                android:id="@+id/D_IDIntervento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:visibility="invisible"
                card_view:layout_constraintBaseline_toBaselineOf="@+id/D_Condominio"
                card_view:layout_constraintLeft_toRightOf="@+id/D_Condominio" />


        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
